{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/",
	"preferredVersions": {
		"php": "latest",
		"wp": "latest"
	},
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "installPlugin",
			"pluginData": {
				"resource": "wordpress.org/plugins",
				"slug": "create-block-theme"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "installTheme",
			"themeData": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/IconickThemes/glaser/refs/heads/main/_playground/glaser.zip"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "resetData"
		},
		{
			"step": "importThemeStarterContent"
		},
		{
			"step": "runPHP",
			"code": "<?php require '/wordpress/wp-load.php';include_once get_theme_file_path('_playground/setup.php');"
		},
		{
			"step": "defineWpConfigConsts",
			"consts": {
				"WP_DEBUG": true,
				"WP_DEBUG_DISPLAY": true
			}
		},
		{
			"step": "login",
			"username": "admin"
		}
	]
}
